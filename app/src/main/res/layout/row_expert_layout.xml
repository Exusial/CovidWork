<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:orientation="horizontal"
    andriod:layout_width="match_parent"
    andriod:layout_height="110dp"
    andriod:background="@drawable/item_wrapper"
    andriod:layout_marginTop="3dp"
    andriod:layout_marginBottom="3dp"
    andriod:layout_marginLeft="5dp"
    andriod:layout_marginRight="5dp"
    >
    <ImageView
        andriod:id="@+id/avatar"
        andriod:layout_width="100dp"
        andriod:layout_height="100dp"
        andriod:layout_marginTop="5dp"
        andriod:layout_marginLeft="3dp"
        andriod:scaleType="centerCrop"
        andriod:src="@drawable/person"
        />
    <LinearLayout
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:orientation="vertical"
        >
        <TextView
            andriod:id="@+id/ntitle1"
            andriod:layout_width="wrap_content"
            andriod:layout_height="40dp"
            andriod:text="Hello"
            andriod:textSize="24dp"
            andriod:textColor="#000000"
            andriod:layout_marginLeft="10dp"
            andriod:paddingTop="5dp"
            />
        <TextView
            andriod:id="@+id/ntitle2"
            andriod:layout_width="wrap_content"
            andriod:layout_height="20dp"
            andriod:text="Hello"
            andriod:textSize="15dp"
            andriod:layout_marginLeft="10dp"
            andriod:layout_marginTop="7dp"
            andriod:singleLine="true"
            />
        <TextView
            andriod:id="@+id/ntitle3"
            andriod:layout_width="wrap_content"
            andriod:layout_height="20dp"
            andriod:text="Hello"
            andriod:textSize="15dp"
            andriod:layout_marginTop="20dp"
            andriod:layout_marginLeft="10dp"
            andriod:singleLine="true"
            />
    </LinearLayout>
</LinearLayout>