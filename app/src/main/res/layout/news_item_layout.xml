<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:orientation="horizontal"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent"
    >

    <ImageView
        andriod:id="@+id/iv1"
        andriod:layout_width="100dp"
        andriod:layout_height="100dp"
        andriod:scaleType="centerCrop"
        andriod:background="#000FFF"
        />
    <LinearLayout
        andriod:layout_width="match_parent"
        andriod:layout_height="match_parent"
        andriod:orientation="vertical"
        >
        <TextView
            andriod:id="@+id/ntitle1"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="Hello"
            andriod:textSize="20dp"
            andriod:layout_marginLeft="10dp"
            />
        <TextView
            andriod:id="@+id/ntitle2"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="Hello"
            andriod:textSize="20dp"
            andriod:layout_marginTop="10dp"
            andriod:layout_marginLeft="10dp"
            />
        <TextView
            andriod:id="@+id/ntitle3"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="Hello"
            andriod:textSize="20dp"
            andriod:layout_marginTop="10dp"
            andriod:layout_marginLeft="10dp"
            />
    </LinearLayout>
</LinearLayout>