<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:orientation="vertical"
    andriod:layout_width="match_parent"
    andriod:layout_height="wrap_content"
    andriod:paddingBottom="4dp"
    andriod:paddingTop="4dp"
    andriod:paddingLeft="4dp"
    >
    <LinearLayout
        andriod:id="@+id/text"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:orientation="horizontal"
        andriod:background="@drawable/title_wrapper"
        andriod:paddingRight="20dp"
        >
        <ImageView
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:src="@drawable/blue_rect"
            andriod:scaleX="3"
            andriod:scaleY="10"/>
        <TextView
            andriod:id="@+id/root_text"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="tt"
            andriod:textSize="30sp"
            andriod:paddingLeft="25dp"
            />
    </LinearLayout>
</LinearLayout>