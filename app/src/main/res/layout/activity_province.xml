<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:id="@+id/mll1"
    andriod:orientation="vertical"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent">
    <TextView
        andriod:layout_width="210dp"
        andriod:layout_height="70dp"
        andriod:text="各省新冠数据"
        andriod:gravity="center"
        andriod:layout_gravity="center_horizontal"
        andriod:layout_marginTop="20dp"
        andriod:textSize="30dp"
        />
    <LinearLayout
        andriod:id="@+id/loading"
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:orientation="horizontal"
        andriod:visibility="visible"
        >
        <ProgressBar
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar"
            andriod:layout_marginTop="16dp"
            />
    <TextView
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:text="加载中..."
        andriod:layout_marginTop="20dp"
        andriod:layout_marginBottom="20dp"
        andriod:gravity="left"
        andriod:layout_marginLeft="2dp"
        andriod:textSize="30dp"
        />
    </LinearLayout>
    <LinearLayout
        andriod:id="@+id/explain"
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:orientation="horizontal"
        andriod:visibility="invisible"
        andriod:layout_marginLeft="10dp"

        >
        <ImageView
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:src="@drawable/rect"
            andriod:layout_marginTop="5dp"
            andriod:layout_marginRight="5dp"
            andriod:layout_marginLeft="5dp"
            />
        <TextView
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="感染人数"
            />
        <ImageView
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:layout_marginTop="5dp"
            andriod:layout_marginRight="5dp"
            andriod:layout_marginLeft="5dp"
            andriod:src="@drawable/gray_rect"
            />
        <TextView
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="死亡人数"
            />
        <ImageView
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:layout_marginTop="5dp"
            andriod:layout_marginRight="5dp"
            andriod:layout_marginLeft="5dp"
            andriod:src="@drawable/blue_rect"
            />
        <TextView
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="痊愈人数"
            />
    </LinearLayout>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        andriod:id="@+id/refreshLayout"
        andriod:layout_width="match_parent"
        andriod:layout_height="match_parent"
        andriod:layout_gravity="center_horizontal"
        andriod:visibility="invisible"
    >
        <lecho.lib.hellocharts.view.ColumnChartView
            andriod:id="@+id/col1"
            andriod:layout_width="match_parent"
            andriod:layout_height="wrap_content"
            andriod:layout_marginLeft="30dp"/>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>